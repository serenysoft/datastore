{
  "name": "@sereny/datastore",
  "description": "The DataStore provides an interface for loading, editing and handling related events.",
  "readmeFilename": "README.md",
  "version": "0.13.1",
  "license": "MIT",
  "keywords": [
    "datasource",
    "datastore",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/serenysoft/datastore"
  },
  "bugs": {
    "url": "https://github.com/serenysoft/datastore/issues"
  },
  "author": {
    "name": "Leandro Guindani Gehlen",
    "email": "leandrogehlen@gmail.com"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "rimraf -rf dist/ && tsc --project tsconfig.dist.json",
    "lint": "eslint \"src/**/*\" \"tests/**/*\"",
    "release": "release-it --only-version",
    "test": "cross-env NODE_ENV=testing jest --verbose --runInBand --detectOpenHandles",
    "test:ci": "cross-env NODE_ENV=testing jest --verbose --collect-coverage --runInBand"
  },
  "engines": {
    "node": ">= 18"
  },
  "peerDependencies": {
    "axios": "^1.3.0",
    "lodash": "^4.17.0",
    "rxdb": "^15.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@faker-js/faker": "^8.4.1",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.0",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.12.7",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "cross-env": "^7.0.3",
    "cross-fetch": "^4.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nock": "^13.5.4",
    "prettier": "^3.2.5",
    "release-it": "^17.2.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5"
  },
  "release-it": {
    "git": {
      "commitMessage": "Release v${version}"
    },
    "hooks": {
      "before:init": [
        "npm run build"
      ]
    }
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "parser": "@typescript-eslint/parser",
      "sourceType": "module"
    },
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true
        }
      ],
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto",
          "singleQuote": true,
          "quoteProps": "preserve",
          "bracketSameLine": false,
          "printWidth": 100
        }
      ],
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-inferrable-types": "off",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/no-explicit-any": "off"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "dependencies": {
    "luxon": "^3.4.4"
  }
}
